<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
    <link rel="icon" href="https://3.26.177.93:4000/fav_icon_marine.png" type="image/x-icon">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <title>Reset Password</title>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap");

        .mainDiv {
            display: flex;
            min-height: 100%;
            align-items: center;
            justify-content: center;
            background-color: #f9f9f9;
            font-family: 'Open Sans', sans-serif;
        }

        .cardStyle {
            width: 500px;
            border-color: white;
            background: #fff;
            padding: 36px 0;
            border-radius: 4px;
            margin: 30px 0;
            box-shadow: 0px 0 2px 0 rgba(0, 0, 0, 0.25);
        }

        #signupLogo {
            max-height: 100px;
            margin: auto;
            display: flex;
            flex-direction: column;
        }

        .formTitle {
            font-weight: 600;
            margin-top: 20px;
            color: #2F2D3B;
            text-align: center;
        }

        .inputLabel {
            font-size: 12px;
            color: #555;
            margin-bottom: 6px;
            margin-top: 24px;
        }

        .inputDiv {
            width: 70%;
            display: flex;
            flex-direction: column;
            margin: auto;
        }

        input {
            height: 40px;
            font-size: 16px;
            border-radius: 4px;
            border: none;
            border: solid 1px #ccc;
            padding: 0 11px;
        }

        input:disabled {
            cursor: not-allowed;
            border: solid 1px #eee;
        }

        .buttonWrapper {
            margin-top: 40px;
        }

        .submitButton {
            width: 70%;
            height: 40px;
            margin: auto;
            display: block;
            color: #fff;
            background-color: #065492;
            border-color: #065492;
            text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.12);
            box-shadow: 0 2px 0 rgba(0, 0, 0, 0.035);
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }

        .submitButton:disabled,
        button[disabled] {
            border: 1px solid #cccccc;
            background-color: #cccccc;
            color: #666666;
        }

        .ct_show_pass {
            position: absolute;
            top: 19px;
            right: 0px;
            transform: translate(-50%, -50%);
        }

        .inputDiv {
            position: relative;
        }

        .ct_trade_logo {
            /* max-width: 150px; */
            max-height: 150px;
            margin-inline: auto;
            display: block;
        }

        footer.ct_footer_bg {
            background-color: #3c434e;
            padding: 15px;
            color: #fff;
        }

        .ct_custom_btn {
            display: inline-block;
            padding: 12px 24px;
            border: 1px solid #0587f1;
            border-radius: 4px;
            transition: all 0.2s ease-in;
            position: relative;
            overflow: hidden;
            font-size: 16px;
            font-weight: 700;
            color: #fff;
            background-color: #048eff;
            z-index: 1;
            margin-top: 24px;
            width: fit-content;
            line-height: 0px;
        }

        #signupForm .inputDiv input {
            outline: none;
        }

        #signupForm .inputDiv label.inputLabel {
            font-size: 14px;
            font-weight: 500;
        }

        .ct_input_show {
            width: 100%;
            max-width: 100%;
        }

        .error {
            color: red;
            font-size: 12px;
            margin-top: 5px;
        }
    </style>
</head>

<body>

    <div class="mainDiv" style="background-color: #c0c0c0f8;">
        <div class="cardStyle pt-0">
            <form name="resetForm" id="resetForm" method="post">
                <div style="background-color: #4880ff1c; padding: 40px 30px;">
                    <img src="<%= BASE_URL %>/images/logo.png" class="ct_trade_logo"
                        style="width: 220px; object-fit: contain; margin-inline:auto; display: block;">
                </div>

                <h2 class="formTitle"
                    style="margin-top:30px;font-family: 'Nunito Sans', sans-serif; font-weight: 700;font-size: 24px;">
                    Reset Password
                </h2>

                <!-- Hidden token input -->
                <input type="hidden" id="token" value="<%= token %>">

                <div class="inputDiv">
                    <label class="inputLabel" for="password">New Password</label>
                    <div class="position-relative">
                        <input type="password" id="password" name="password" class="ct_input_show" required
                            placeholder="Enter New Password" style="font-size: 14px;">
                        <div class="ct_show_pass" onclick="togglePassword('password', this)">
                            <i class="fa fa-eye-slash"></i>
                        </div>
                        <div class="error" id="passwordError"></div>
                    </div>
                </div>

                <div class="inputDiv">
                    <label class="inputLabel" for="confirmPassword">Confirm Password</label>
                    <div class="position-relative">
                        <input type="password" id="confirmPassword" name="confirm_password" class="ct_input_show"
                            required placeholder="Enter Confirm Password" style="font-size: 14px;">
                        <div class="ct_show_pass" onclick="togglePassword('confirmPassword', this)">
                            <i class="fa fa-eye-slash"></i>
                        </div>
                        <div class="error" id="confirmPasswordError"></div>
                    </div>
                </div>

                <!-- Feedback message -->
                <div class="text-center mt-3">
                    <span id="message" class="error"></span>
                </div>

                <div class="buttonWrapper text-center mt-0">
                    <button type="submit" id="submitButton" class="submitButton ct_custom_btn"
                        style="background-color:#4a81ff; border-color:#4a81ff;">
                        Update Password
                    </button>
                </div>
            </form>
        </div>
    </div>

    </div>
    </div>
    </div>
    </div>

    <script>
        function togglePassword(fieldId, element) {
            const passwordField = document.getElementById(fieldId);
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                element.innerHTML = '<i class="fa fa-eye"></i>';
            } else {
                passwordField.type = 'password';
                element.innerHTML = '<i class="fa fa-eye-slash"></i>';
            }
        }

        $(document).ready(function () {
            $("#resetForm").submit(function (e) {
                e.preventDefault();

                let password = $("#password").val();
                let confirmPassword = $("#confirmPassword").val();
                let token = $("#token").val();

                const passwordPattern = /^[a-zA-Z0-9]{8,}$/;

                let isValid = true;

                // Password validation
                if (!passwordPattern.test(password)) {
                    $("#passwordError").text(
                        "Password must be at least 8 characters long and contain only letters and numbers."
                    );
                    isValid = false;
                } else {
                    $("#passwordError").text("");
                }

                // Confirm password match
                if (password !== confirmPassword) {
                    $("#confirmPasswordError").text("Passwords do not match.");
                    isValid = false;
                } else {
                    $("#confirmPasswordError").text("");
                }

                if (!isValid) return;

                // Submit via AJAX if validation passed
                $.ajax({
                    url: "<%= resetLink %>reset-password",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify({ password, token }),
                    success: function (response) {
                        $("#message").text(response.message).css("color", "green");
                        if (response.success) {
                            localStorage.setItem("passwordReset", "true");
                            window.location.href = response.redirect;
                        }
                    },
                    error: function (xhr) {
                        $("#message").text(xhr.responseJSON.message).css("color", "red");
                    }
                });
            });
        });
    </script>

    </script>
</body>

</html>